@model IEnumerable<corevipul1.Models.Tblemployee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Employee List</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Employee</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Age)</th>
                    <th>@Html.DisplayNameFor(model => model.Salary)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                    <th>@Html.DisplayNameFor(model => model.Datetime)</th>
                    <th>@Html.DisplayNameFor(model => model.Dob)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.Hobbies)</th>
                    <th>@Html.DisplayNameFor(model => model.Country)</th>
                    <th>@Html.DisplayNameFor(model => model.State)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>Photo</th>
                    

                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Salary</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>@item.Datetime</td>
                        <td>@item.Dob?.ToString("dd-MM-yyyy")</td>
                        <td>@item.Gender</td>
                        <td>@item.Hobbies</td>
                        <td>@item.CountryName</td>
                        <td>@item.StateName</td>
                        <td>@item.CityName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Photo))
                            {
                                <img src="@Url.Content("~/uploads/" + item.Photo)" alt="Employee Photo" width="100" height="100" />
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete?')">Delete</a>
                                <a asp-action="login" asp-route-id="@item.Id" class="btn btn-sm btn-info">login</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
